/* pages/detail/detail.wxss */
.details {
 display: flex;
 flex-direction: column;
}
.detailsImg {
  width: 100%;
  height: 460rpx;
}

.detailsUser {
  padding: 10rpx;
}
.detailsUser image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.detailsUser text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.detailsTitle {
  font-size: 38rpx;
  font-weight: bold;
  margin-left: 10rpx; 
}
.detailsView {
  position: relative;
}

.line{
  position: absolute;
  left: 0;
  top: 45rpx;
  width: 98%;
  height: 1px;
  background: #333;
  margin-left: 10rpx;
  z-index: -1;
}

.detailsIcon{
  float: right;
  margin-right: 50rpx;
}
.detailsIcon image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx
}
button{
  width: 280rpx;
  height: 80rpx;
}

.conteat {
  margin: 20rpx 10rpx 40rpx 10rpx;
  font-size: 32rpx;
  text-indent: 64rpx;
  text-align: left;
}

.music{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 200rpx;
  margin: -30rpx;
}
